======================= Callender Code ========================

<?php
// Get current month and year
$month = date('m');
$year = date('Y');

// Get the first and last day of the month
$firstDay = date('N', strtotime("{$year}-{$month}-01"));
$lastDay = date('t', strtotime("{$year}-{$month}-01"));

// Display the calendar
echo "<h2>" . date('F Y') . "</h2>";
echo "<table>";
echo "<tr><th>Sun</th><th>Mon</th><th>Tue</th><th>Wed</th><th>Thu</th><th>Fri</th><th>Sat</th></tr>";

// Display the days of the month
echo "<tr>";
for ($i = 1; $i < $firstDay; $i++) {
    echo "<td></td>";
}

for ($day = 1; $day <= $lastDay; $day++) {
    echo "<td>{$day}</td>";

    if (($day + $firstDay - 1) % 7 == 0) {
        echo "</tr>";
        if ($day != $lastDay) {
            echo "<tr>";
        }
    }
}

while (($day + $firstDay - 1) % 7 != 0) {
    echo "<td></td>";
    $day++;
}

echo "</tr>";
echo "</table>";
?>




2nd code====

<?php
// Create a DateTime object for the current month
$now = new DateTime();
// Get the number of days in the month
$days_in_month = $now->format('t');
// Display the calendar
echo "<h2>{$now->format('F Y')}</h2>";
echo "<table>";
echo
"<tr><th>Sun</th><th>Mon</th><th>Tue</th><th>Wed</th><th>Thu</th><th>Fri<
/th><th>Sat </th></tr>";
// Start the calendar from the first day of the month
$now->modify('first day of this month');
// Loop through the days of the month
while ($now->format('j') <= $days_in_month) {
 if ($now->format('w') == 0) {
 echo "<tr>";
 }
 echo "<td>{$now->format('j')}</td>";
 if ($now->format('w') == 6) {
 echo "</tr>";
 }
 $now->modify('+1 day');
}
echo "</table>";
?>




================== online store front ==================


<?php
// Retrieve product data from the database
$products = [
 ['id' => 1, 'name' => 'Product 1', 'price' => 10.99],
 ['id' => 2, 'name' => 'Product 2', 'price' => 19.99],
 ['id' => 3, 'name' => 'Product 3', 'price' => 5.99]
];
// Display products
foreach ($products as $product) {
 echo "<h3>{$product['name']}</h3>";
 echo "<p>Price: {$product['price']}</p>";
 echo "<button>Add to Cart</button>";
}
?>


================= shopping card mechanism==================


<?php
// Start or resume the session
session_start();
// Add a product to the cart
if (isset($_POST['add_to_cart'])) {
 $product_id = $_POST['product_id'];
 $quantity = $_POST['quantity'];
 // Check if the product is already in the cart
 if (isset($_SESSION['cart'][$product_id])) {
 $_SESSION['cart'][$product_id] += $quantity;
 } else {
 $_SESSION['cart'][$product_id] = $quantity;
 }
 echo "Product added to cart.";
}
// Display the cart contents
if (isset($_SESSION['cart'])) {
 foreach ($_SESSION['cart'] as $product_id => $quantity) {
 echo "<p>Product ID: {$product_id}, Quantity: {$quantity}</p>";
 }
} else {
 echo "Cart is empty.";
}
?>


